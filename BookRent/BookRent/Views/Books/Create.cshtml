@model BookRent.Models.Books

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Books</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BkImage" class="control-label"></label>
                <input asp-for="BkImage" class="form-control" />
                <span asp-validation-for="BkImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BkName" class="control-label"></label>
                <input asp-for="BkName" class="form-control" />
                <span asp-validation-for="BkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BkDescription" class="control-label"></label>
                <input asp-for="BkDescription" class="form-control" />
                <span asp-validation-for="BkDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BkPrice" class="control-label"></label>
                <input asp-for="BkPrice" class="form-control" />
                <span asp-validation-for="BkPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BkCategory" class="control-label"></label>
                <select asp-for="BkCategory" asp-items="Html.GetEnumSelectList<BkCategory>()" class="form-control"></select>
                <span asp-validation-for="BkCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BkReleaseYear" class="control-label"></label>
                <input asp-for="BkReleaseYear" class="form-control" />
                <span asp-validation-for="BkReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
