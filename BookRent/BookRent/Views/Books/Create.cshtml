                <span asp-validation-for="BkPageNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BkLanguage" class="control-label"></label>
                <select asp-for="BkLanguage" asp-items="Html.GetEnumSelectList<BkLanguage>()" class="form-control"></select>
                <span asp-validation-for="BkLanguage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BkCoverType" class="control-label"></label>
